#include <iostream> 

using namespace std; 

int main()
{
    cout << "welcome to mad lib program" << endl;
    cout << "please enter a noun" << endl;
    
    string first_noun;
    cin >>  first_noun;
     
    cout << "Please enter an adjective" << endl;
    
    string first_adjective;
    cin >> first_adjective; 
   
    cout << "please  enter a number" << endl;
    int number;
    cin >> number;
    
    cout << "please enter a letter" << endl;
    
    char c;
    cin >> c;
    
    cout << "please enter a number with a decimal" << endl;
    
    float first_decimal;
    cin >> first_decimal;
    
    cout << " thank you! now processing " << endl;

    
    cout << "once upon a time, a " << first_noun << " went to the pond. On his walk to the pond, " << first_noun << endl;
    cout << "found " << number << " frogs. these frogs were very " << first_adjective << ", as they were " << first_decimal << " times more " << first_adjective<<  " than ordinary frogs" << endl;
    cout << first_noun << " said " << c << "! those sure are some crazy frogs!" << endl;
    return 0;
}

